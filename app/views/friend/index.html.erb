<div class="container" style="margin-left:20em;">
  <div class="row">
    <div class="col-md-10">
      <h1 class="my-4"><i class="fa fa-users"></i>  Friends</h1>
    </div>
  </div>

  <% @friends.each do |friend| %>
  	<% @my_friend = @users.find_by_id(friend.user_id_2)%>
    <div class="row">
      <div class="col-md-2">
        <a href="#">
          <img class="img-fluid rounded mb-3 mb-md-0" src=<%=@my_friend.image.url(:medium) %> alt="">
        </a>
      </div>
      <div class="col-md-4">
        <h2><%= @my_friend.email %></h2>
      </div>
      <div class="col-md-1">
	    <a href="/friend/<%= @my_friend.id %>">
	      <button class="btn btn-info fa fa-eye"></button>
	    </a>
	  </div>
    </div>
    <hr>
  <% end %>
</div>
